{
    "manifest_version": 3,
    "name": "Block-Ze-Geek",
    "version": "0.1",
    "description": "Block ze geeky geek geek",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": ["<all_urls>"],
    "background" : {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "/popup/popup.html",
        "default_icon": "/assets/doomscroll.png"
    },
    "icons": {
        "16": "/assets/16x16.png",
        "32": "/assets/32x32.png",
        "48": "/assets/48x48.png",
        "128": "/assets/128x128.png"
    }
}